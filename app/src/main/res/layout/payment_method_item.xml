<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/PaymentMethodCard"
    android:layout_width="150dp"
    android:layout_height="75dp"
    app:cardBackgroundColor="#673AB7"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="8dp"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/MethodIcon"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:tint="@android:color/white"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/MethodName"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/MethodIcon"
            android:ellipsize="end"
            android:gravity="center_vertical|start"
            android:lines="1"
            android:paddingEnd="2dp"
            android:paddingStart="2dp"
            android:textAppearance="@style/textAppearanceMed"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/amountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/MethodName"
            android:layout_toEndOf="@+id/MethodIcon"
            android:gravity="bottom|start"
            android:paddingBottom="5dp"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:textAppearance="@style/textAppearanceMed"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/currencyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/MethodName"
            android:layout_toEndOf="@+id/amountText"
            android:gravity="bottom|start"
            android:paddingBottom="5dp"
            android:textColor="@android:color/white" />
    </RelativeLayout>
</android.support.v7.widget.CardView>