<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ab.piggybank.activity.Calculator"
    tools:showIn="@layout/activity_calculator">

    <TextView
        android:id="@+id/currentAmountView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:gravity="center_vertical"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:text="@string/current_amount_is"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/calculator_screen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.2"
        android:gravity="bottom|end"
        android:maxLines="4"
        android:paddingBottom="8dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="36sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="@color/colorPrimaryDark">

        <Button
            android:id="@+id/button"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:background="?selectableItemBackgroundBorderless"
            android:gravity="center"
            android:onClick="onClickNumber"
            android:text="7"
            android:textColor="?android:attr/textColorTertiary"
            android:textSize="24sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/button2"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/button"
            android:background="?selectableItemBackgroundBorderless"
            android:gravity="center"
            android:onClick="onClickNumber"
            android:text="8"
            android:textColor="?android:attr/textColorTertiary"
            android:textSize="24sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/button3"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/button2"
            android:background="?selectableItemBackgroundBorderless"
            android:gravity="center"
            android:onClick="onClickNumber"
            android:text="9"
            android:textColor="?android:attr/textColorTertiary"
            android:textSize="24sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/button10"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/button"
            android:background="?selectableItemBackgroundBorderless"
            android:gravity="center"
            android:onClick="onClickNumber"
            android:text="4"
            android:textColor="?android:attr/textColorTertiary"
            android:textSize="24sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/button11"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_below="@+id/button2"
            android:layout_toEndOf="@+id/button"
            android:background="?selectableItemBackgroundBorderless"
            android:gravity="center"
            android:onClick="onClickNumber"
            android:text="5"
            android:textColor="?android:attr/textColorTertiary"
            android:textSize="24sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/button12"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_below="@+id/button3"
            android:layout_toEndOf="@+id/button11"
            android:background="?selectableItemBackgroundBorderless"
            android:gravity="center"
            android:onClick="onClickNumber"
            android:text="6"
            android:textColor="?android:attr/textColorTertiary"
            android:textSize="24sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/button14"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/button10"
            android:background="?selectableItemBackgroundBorderless"
            android:gravity="center"
            android:onClick="onClickNumber"
            android:text="1"
            android:textColor="?android:attr/textColorTertiary"
            android:textSize="24sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/button15"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_below="@+id/button11"
            android:layout_toEndOf="@+id/button10"
            android:background="?selectableItemBackgroundBorderless"
            android:gravity="center"
            android:onClick="onClickNumber"
            android:text="2"
            android:textColor="?android:attr/textColorTertiary"
            android:textSize="24sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/button17"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_below="@+id/button12"
            android:layout_toEndOf="@+id/button11"
            android:background="?selectableItemBackgroundBorderless"
            android:gravity="center"
            android:onClick="onClickNumber"
            android:text="3"
            android:textColor="?android:attr/textColorTertiary"
            android:textSize="24sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/button21"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_below="@+id/button15"
            android:layout_toEndOf="@+id/button14"
            android:background="?selectableItemBackgroundBorderless"
            android:gravity="center"
            android:onClick="onClickNumber"
            android:text="0"
            android:textColor="?android:attr/textColorTertiary"
            android:textSize="24sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/button20"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/button14"
            android:background="?selectableItemBackgroundBorderless"
            android:gravity="center"
            android:onClick="onClickClear"
            android:text="C"
            android:textColor="?android:attr/textColorTertiary"
            android:textSize="24sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/button5"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_below="@+id/button17"
            android:layout_toEndOf="@+id/button15"
            android:background="?selectableItemBackgroundBorderless"
            android:gravity="center"
            android:onClick="onClickComma"
            android:text="."
            android:textColor="?android:attr/textColorTertiary"
            android:textSize="42sp"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/button3"
            android:background="#616161"
            android:orientation="vertical"
            android:weightSum="5">

            <Button
                android:id="@+id/button22"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:onClick="onClickOperator"
                android:text="รท"
                android:textColor="#EEEEEE"
                android:textSize="24sp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button19"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:onClick="onClickOperator"
                android:text="ร"
                android:textColor="#EEEEEE"
                android:textSize="24sp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:onClick="onClickOperator"
                android:text="+"
                android:textColor="#EEEEEE"
                android:textSize="24sp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button13"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:onClick="onClickOperator"
                android:text="-"
                android:textColor="#EEEEEE"
                android:textSize="24sp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button23"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:onClick="onClickEqual"
                android:text="="
                android:textColor="#EEEEEE"
                android:textSize="24sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
